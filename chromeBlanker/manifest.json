{
    "manifest_version": 2,

    "name": "word blanker",
    "description": "make words blank in texts",
    "version": "1.0",

    "browser_action": {
	"default_icon": "icon.png",
	"default_popup": "popup.html"
    },
    "background": {
    	"scripts": ["eventPage.js"],
    	"persistent": false
    },
    "permissions": [
	"activeTab",
	"<all_urls>"
    ],
    "content_scripts": [ {
	"js": [ "libs/jquery-2.1.4.min.js", "libs/jquery-ui.js", "contentScript.js"],
	"css": ["libs/jquery-ui.css"],
	"matches": [ "http://*/*", "https://*/*"]
    }]
}
