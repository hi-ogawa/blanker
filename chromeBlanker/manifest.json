{
    "manifest_version": 2,

    "name": "word blanker",
    "description": "make words blank in texts based on their POS (part of speech)",
    "version": "1.0",

    "icons": { "64": "icons/favicon.ico" },
    "options_ui": {
	"page": "options/options.html",
	"chrome_style": true
    },
    "background": {
    	"scripts": ["eventPage/eventPage.js"],
    	"persistent": false
    },
    "permissions": [
	"storage",
	"activeTab",
	"<all_urls>"
    ],
    "content_scripts": [ {
	"js": [ "jslib/jquery.js",
		"contentScript/contentScript.js"],
	"matches": [ "http://*/*", "https://*/*"]
    }]
}
